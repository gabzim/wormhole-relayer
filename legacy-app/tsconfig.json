{
  "compilerOptions": {
    "outDir": "lib",
    "target": "esnext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["es2021"],
    "skipLibCheck": true,
    "strict": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "sourceMap": true
  },
  "include": ["src", "main.ts", "plugins", "scripts"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
